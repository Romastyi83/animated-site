.burger
  position relative
  width 26px
  height 18px
  display none
  border none
  padding 0
  background-color transparent
  cursor pointer
  z-index 99
  +mq(0, 1024px)
    display block
  +element(line)
    position absolute
    left 0
    top 50%
    width 100%
    height 2.25px
    background-color #282A33
    transform translateY(-50%)
    transition opacity 0.3s ease-in-out
    .active &
      opacity 0
  &:before
  &:after
    content ''
    position absolute
    left 0
    width 100%
    height 2px
    background-color #282A33
    transition transform 0.3s ease-in-out, top 0.3s ease-in-out, bottom 0.3s ease-in-out
  &:before
    top 0
  &.active
    &:before
      top 50%
      transform rotate(45deg)
  &:after
    bottom 0
  &.active
    &:after
      bottom auto
      top 50%
      transform rotate(-45deg)
.nav
  position relative
  z-index 99
  +mq(0, 1024px)
    position fixed
    right 0
    top 0
    overflow-y auto
    padding 60px 0 0
    width 100%
    height 100%
    background-color #FAFAFA
    transform translateX(100%)
    transition transform 0.3s ease-in-out
  &.visible
    +mq(0, 1024px)
      transform none
  +element(list)
    list-style none
    display flex
    align-items flex-start
    +mq(0, 1024px)
      flex-direction column
      margin-left 8%
  +element(item)
    & + &
      margin-left 30px
      +mq(0, 1024px)
        margin 0
        margin-top 40px
  +element(link)
    position relative
    color #282A33
    font-family "SF Pro Display Bold", sans-serif
    font-size 18px
    transition all 0.2s ease
    +mq(0, 1024px)
      font-size 26px
    &.active
      color lighten(#282A33, 20)
      &:before
        content ''
        position absolute
        width 104px
        height 156px
        top -100%
        left 50%
        background-image url(../images/active.png)
        transform translate(-50%, -50%)
        pointer-events none
        z-index -1
        +mq(0, 1024px)
          width 48px
          height 70px
          top 13%
          background-image url(../images/active-mob.png)
    &:hover
      color lighten(#282A33, 20)
.stop-scroll
  overflow hidden
  height 100vh
.mob-menu-img
  display none
  +mq(0, 1024px)
    display block
    max-width 100%